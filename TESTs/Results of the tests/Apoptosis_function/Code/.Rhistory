calc_binom <- function(tr,n,p){
if (n*p < 10^8){
ou <- rbinom(tr,n,p)
} else {
m <- n * p
s <- sqrt(  n*p* (1-p)  )
ou <- rnorm(tr,mean = m, sd = s)
}
return(ou)
}
calc_binom(100,10^8,0.1)
